import { useState, useEffect } from "react";
import { useQuery, useMutation } from "@tanstack/react-query";
import { Link } from "wouter";
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardDescription,
} from "@/components/ui/card";
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Badge } from "@/components/ui/badge";
import { 
  Loader2, 
  Bell, 
  Send, 
  Mail, 
  Clock, 
  AlertCircle, 
  CheckCircle, 
  Play, 
  Pause, 
  RotateCcw,
  Settings,
  Eye,
  TestTube,
  Users,
  Package,
  Search,
  MapPin,
  Filter,
  X,
  Truck
} from "lucide-react";
import { apiRequest, queryClient } from "@/lib/queryClient";
import { withAuth } from "@/lib/with-auth";
import { useToast } from "@/hooks/use-toast";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
  DialogFooter,
  DialogTrigger,
} from "@/components/ui/dialog";
import {
  Form,
  FormControl,
  FormField,
  FormItem,
  FormLabel,
  FormMessage,
  FormDescription,
} from "@/components/ui/form";
import { Textarea } from "@/components/ui/textarea";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import {
  Tabs,
  TabsContent,
  TabsList,
  TabsTrigger,
} from "@/components/ui/tabs";
import { useForm } from "react-hook-form";
import { zodResolver } from "@hookform/resolvers/zod";
import { z } from "zod";

// Form schemas
const manualNotificationSchema = z.object({
  notificationType: z.string().min(1, "Please select a notification type"),
  shipmentId: z.string().optional(),
  userId: z.string().optional(),
  customSubject: z.string().optional(),
  customMessage: z.string().optional(),
  recipients: z.string().optional(),
});

const testEmailSchema = z.object({
  emailType: z.string().min(1, "Please select an email type"),
  testRecipient: z.string().email("Please enter a valid email address"),
});

// Types
interface NotificationLog {
  id: number;
  type: string;
  recipient: string;
  subject: string;
  status: 'sent' | 'failed';
  sentAt: string;
  shipmentId?: number;
  userId?: number;
  error?: string;
}

interface TrackingSchedulerStatus {
  isRunning: boolean;
  nextSync: string;
  lastSync: string;
  syncCount: number;
  errors: number;
}

interface Shipment {
  id: number;
  trackingNumber?: string;
  carrierTrackingNumber?: string;
  status: string;
  toName: string;
  toCity: string;
  toCountry: string;
  serviceLevel: string;
  totalPrice: number;
  userId: number;
  createdAt: string;
  updatedAt: string;
  trackingLastChecked?: string;
  trackingData?: any;
  carrier?: string;
  senderName?: string;
  toPhone?: string;
  toEmail?: string;
}

function AdminTrackingPage() {
  try {
    const { toast } = useToast();
    const [selectedTab, setSelectedTab] = useState("tracking");
    const [searchTerm, setSearchTerm] = useState("");
    const [statusFilter, setStatusFilter] = useState("");
    const [carrierFilter, setCarrierFilter] = useState("");

    // Queries
    const { data: notificationLogs, isLoading: logsLoading } = useQuery({
      queryKey: ["/api/admin/notification-logs"],
    });

    const { data: schedulerStatus, isLoading: statusLoading } = useQuery({
      queryKey: ["/api/admin/tracking-scheduler/status"],
    });

    const { data: allShipmentsData, isLoading: allShipmentsLoading } = useQuery({
      queryKey: ["/api/shipments/all"],
    });

    const { data: fastTrackingNotifications } = useQuery({
      queryKey: ["/api/admin/fast-tracking-notifications"],
    });

  // Form handling
  const manualForm = useForm({
    resolver: zodResolver(manualNotificationSchema),
    defaultValues: {
      notificationType: "",
      shipmentId: "",
      userId: "",
      customSubject: "",
      customMessage: "",
      recipients: "",
    },
  });

  const testEmailForm = useForm({
    resolver: zodResolver(testEmailSchema),
    defaultValues: {
      emailType: "",
      testRecipient: "",
    },
  });

  // Mutations
  const sendManualNotification = useMutation({
    mutationFn: async (data: z.infer<typeof manualNotificationSchema>) => {
      return await apiRequest("POST", "/api/admin/send-notification", {
        notificationType: data.notificationType,
        shipmentId: data.shipmentId,
        userId: data.userId,
        customSubject: data.customSubject,
        customMessage: data.customMessage,
        recipients: data.recipients,
      });
    },
    onSuccess: () => {
      toast({
        title: "Notification Sent Successfully",
        description: "The notification has been sent to the specified recipients.",
      });
      manualForm.reset();
    },
    onError: (error: any) => {
      toast({
        variant: "destructive",
        title: "Failed to Send Notification",
        description: error.message || "An error occurred while sending the notification.",
      });
    },
  });

  const sendTestEmail = useMutation({
    mutationFn: async (data: z.infer<typeof testEmailSchema>) => {
      return await apiRequest("POST", "/api/admin/send-test-email", {
        emailType: data.emailType,
        testRecipient: data.testRecipient,
      });
    },
    onSuccess: () => {
      toast({
        title: "Test Email Sent",
        description: "The test email has been sent successfully.",
      });
      testEmailForm.reset();
    },
    onError: (error: any) => {
      toast({
        variant: "destructive",
        title: "Failed to Send Test Email",
        description: error.message || "An error occurred while sending the test email.",
      });
    },
  });

  const controlScheduler = useMutation({
    mutationFn: async (action: "start" | "stop" | "sync") => {
      return await apiRequest("POST", `/api/admin/tracking-scheduler/${action}`, {});
    },
    onSuccess: (data, action) => {
      toast({
        title: `Scheduler ${action === "sync" ? "Sync" : action} Success`,
        description: `The tracking scheduler has been ${action === "sync" ? "synced" : `${action}ed`} successfully.`,
      });
      queryClient.invalidateQueries({ queryKey: ["/api/admin/tracking-scheduler/status"] });
    },
    onError: (error: any, action) => {
      toast({
        variant: "destructive",
        title: `Scheduler ${action} Failed`,
        description: error.message || `An error occurred while ${action}ing the scheduler.`,
      });
    },
  });

  // Notification types
  const notificationTypes = [
    { value: "delivery", label: "Delivery Notification" },
    { value: "tracking-exception", label: "Tracking Exception" },
    { value: "delivery-issue", label: "Delivery Issue" },
    { value: "customs-charges", label: "Customs Charges" },
    { value: "shipment-approval", label: "Shipment Approval" },
    { value: "tracking-number", label: "Tracking Number Added" },
    { value: "pickup-notification", label: "Pickup Notification" },
    { value: "user-approval", label: "User Approval" },
  ];

  const testEmailTypes = [
    { value: "delivery", label: "Delivery Confirmation" },
    { value: "tracking-exception", label: "Tracking Exception" },
    { value: "delivery-issue", label: "Delivery Issue" },
    { value: "customs-charges", label: "Customs Charges" },
    { value: "new-shipment", label: "New Shipment" },
    { value: "bulk-shipment", label: "Bulk Shipment" },
  ];

  // Helper functions for styling
  const getStatusColor = (status: string) => {
    switch (status.toLowerCase()) {
      case 'pending': return 'bg-yellow-100 text-yellow-800';
      case 'processing': return 'bg-indigo-100 text-indigo-800';
      case 'in_transit': return 'bg-blue-100 text-blue-800';
      case 'out_for_delivery': return 'bg-orange-100 text-orange-800';
      case 'delivered': return 'bg-green-100 text-green-800';
      case 'exception': return 'bg-red-100 text-red-800';
      case 'ready_for_pickup': return 'bg-purple-100 text-purple-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  const getServiceColor = (service: string) => {
    switch (service?.toLowerCase()) {
      case 'express': return 'bg-orange-100 text-orange-800';
      case 'eco': return 'bg-green-100 text-green-800';
      case 'standard': return 'bg-blue-100 text-blue-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  const getCarrierColor = (carrier: string) => {
    switch (carrier?.toLowerCase()) {
      case 'ups': return 'bg-amber-100 text-amber-800';
      case 'fedex': return 'bg-purple-100 text-purple-800';
      case 'dhl': return 'bg-red-100 text-red-800';
      case 'aramex': return 'bg-red-100 text-red-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  // Filter shipments based on search and filter criteria
  const allShipments = Array.isArray(allShipmentsData) ? allShipmentsData : [];
  const filteredShipments = allShipments.filter((shipment: Shipment) => {
    const matchesSearch = searchTerm === "" || 
      shipment.toName.toLowerCase().includes(searchTerm.toLowerCase()) ||
      shipment.trackingNumber?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      shipment.carrierTrackingNumber?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      shipment.id.toString().includes(searchTerm);
    
    const matchesStatus = statusFilter === "" || shipment.status === statusFilter;
    const matchesCarrier = carrierFilter === "" || shipment.carrier?.toLowerCase() === carrierFilter;
    
    return matchesSearch && matchesStatus && matchesCarrier;
  });

  return (
      <div className="container mx-auto p-6 space-y-6">
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold tracking-tight">Admin Tracking & Notifications</h1>
          <p className="text-muted-foreground">
            Manage tracking status, notification system, and email delivery
          </p>
        </div>
        <Link href="/admin-shipments">
          <Button variant="outline">
            <Package className="w-4 h-4 mr-2" />
            Back to Shipments
          </Button>
        </Link>
      </div>

      <Tabs value={selectedTab} onValueChange={setSelectedTab} className="space-y-6">
        <TabsList className="grid w-full grid-cols-5">
          <TabsTrigger value="tracking">Tracking Status</TabsTrigger>
          <TabsTrigger value="manual">Manual Notifications</TabsTrigger>
          <TabsTrigger value="scheduler">Tracking Scheduler</TabsTrigger>
          <TabsTrigger value="logs">Notification Logs</TabsTrigger>
          <TabsTrigger value="test">Test Emails</TabsTrigger>
        </TabsList>

        {/* Tracking Status Tab */}
        <TabsContent value="tracking" className="space-y-6">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Truck className="w-5 h-5 text-blue-500" />
                Tracking Status Overview
              </CardTitle>
              <CardDescription>
                Monitor tracking status of all shipments with real-time updates and notification controls
              </CardDescription>
            </CardHeader>
            <CardContent>
              {/* Filters */}
              <div className="flex flex-col md:flex-row gap-4 mb-6">
                <div className="flex-1">
                  <div className="relative">
                    <Search className="absolute left-3 top-3 h-4 w-4 text-gray-400" />
                    <Input
                      placeholder="Search by tracking number, customer name, or shipment ID..."
                      value={searchTerm}
                      onChange={(e) => setSearchTerm(e.target.value)}
                      className="pl-10"
                    />
                  </div>
                </div>
                <div className="w-full md:w-48">
                  <Select value={statusFilter} onValueChange={setStatusFilter}>
                    <SelectTrigger>
                      <Filter className="h-4 w-4 mr-2" />
                      <SelectValue placeholder="Filter by status" />
                    </SelectTrigger>
                    <SelectContent>
                      <SelectItem value="">All Statuses</SelectItem>
                      <SelectItem value="pending">Pending</SelectItem>
                      <SelectItem value="processing">Processing</SelectItem>
                      <SelectItem value="in_transit">In Transit</SelectItem>
                      <SelectItem value="out_for_delivery">Out for Delivery</SelectItem>
                      <SelectItem value="delivered">Delivered</SelectItem>
                      <SelectItem value="exception">Exception</SelectItem>
                      <SelectItem value="ready_for_pickup">Ready for Pickup</SelectItem>
                    </SelectContent>
                  </Select>
                </div>
                <div className="w-full md:w-48">
                  <Select value={carrierFilter} onValueChange={setCarrierFilter}>
                    <SelectTrigger>
                      <Truck className="h-4 w-4 mr-2" />
                      <SelectValue placeholder="Filter by carrier" />
                    </SelectTrigger>
                    <SelectContent>
                      <SelectItem value="">All Carriers</SelectItem>
                      <SelectItem value="ups">UPS</SelectItem>
                      <SelectItem value="fedex">FedEx</SelectItem>
                      <SelectItem value="dhl">DHL</SelectItem>
                      <SelectItem value="aramex">Aramex</SelectItem>
                    </SelectContent>
                  </Select>
                </div>
                {(searchTerm || statusFilter || carrierFilter) && (
                  <Button 
                    variant="outline" 
                    onClick={() => {
                      setSearchTerm("");
                      setStatusFilter("");
                      setCarrierFilter("");
                    }}
                    className="w-full md:w-auto"
                  >
                    <X className="h-4 w-4 mr-2" />
                    Clear Filters
                  </Button>
                )}
              </div>

              {/* Tracking Status Table */}
              {allShipmentsLoading ? (
                <div className="flex items-center justify-center py-8">
                  <Loader2 className="h-6 w-6 animate-spin" />
                </div>
              ) : (
                <div className="border rounded-lg overflow-hidden">
                  <Table>
                    <TableHeader>
                      <TableRow>
                        <TableHead>Shipment</TableHead>
                        <TableHead>Tracking Numbers</TableHead>
                        <TableHead>Customer</TableHead>
                        <TableHead>Destination</TableHead>
                        <TableHead>Status</TableHead>
                        <TableHead>Carrier</TableHead>
                        <TableHead>Service</TableHead>
                        <TableHead>Last Update</TableHead>
                        <TableHead>Actions</TableHead>
                      </TableRow>
                    </TableHeader>
                    <TableBody>
                      {filteredShipments.length > 0 ? (
                        filteredShipments.map((shipment: Shipment) => (
                          <TableRow key={shipment.id}>
                            <TableCell className="font-medium">#{shipment.id}</TableCell>
                            <TableCell>
                              <div className="space-y-1">
                                {shipment.trackingNumber && (
                                  <div className="text-sm font-mono bg-blue-50 px-2 py-1 rounded">
                                    {shipment.trackingNumber}
                                  </div>
                                )}
                                {shipment.carrierTrackingNumber && (
                                  <div className="text-xs font-mono text-muted-foreground bg-gray-50 px-2 py-1 rounded">
                                    {shipment.carrierTrackingNumber}
                                  </div>
                                )}
                                {!shipment.trackingNumber && !shipment.carrierTrackingNumber && (
                                  <span className="text-xs text-muted-foreground italic">No tracking assigned</span>
                                )}
                              </div>
                            </TableCell>
                            <TableCell>
                              <div className="space-y-1">
                                <div className="font-medium">{shipment.toName}</div>
                                <div className="text-xs text-muted-foreground">User #{shipment.userId}</div>
                                {shipment.toEmail && (
                                  <div className="text-xs text-blue-600">{shipment.toEmail}</div>
                                )}
                              </div>
                            </TableCell>
                            <TableCell>
                              <div className="space-y-1">
                                <div className="flex items-center gap-1">
                                  <MapPin className="h-3 w-3 text-gray-400" />
                                  <span className="text-sm">{shipment.toCity}</span>
                                </div>
                                <div className="text-xs text-muted-foreground">{shipment.toCountry}</div>
                              </div>
                            </TableCell>
                            <TableCell>
                              <Badge className={getStatusColor(shipment.status)}>
                                {shipment.status.replace('_', ' ').toUpperCase()}
                              </Badge>
                            </TableCell>
                            <TableCell>
                              {shipment.carrier ? (
                                <Badge variant="outline" className={getCarrierColor(shipment.carrier)}>
                                  {shipment.carrier.toUpperCase()}
                                </Badge>
                              ) : (
                                <span className="text-xs text-muted-foreground">Not assigned</span>
                              )}
                            </TableCell>
                            <TableCell>
                              <Badge variant="outline" className={getServiceColor(shipment.serviceLevel)}>
                                {shipment.serviceLevel?.toUpperCase() || 'STANDARD'}
                              </Badge>
                            </TableCell>
                            <TableCell>
                              <div className="space-y-1">
                                <div className="text-sm flex items-center gap-1">
                                  <Clock className="h-3 w-3 text-gray-400" />
                                  {new Date(shipment.updatedAt).toLocaleDateString()}
                                </div>
                                <div className="text-xs text-muted-foreground">
                                  {new Date(shipment.updatedAt).toLocaleTimeString()}
                                </div>
                                {shipment.trackingLastChecked && (
                                  <div className="text-xs text-blue-600">
                                    Checked: {new Date(shipment.trackingLastChecked).toLocaleTimeString()}
                                  </div>
                                )}
                              </div>
                            </TableCell>
                            <TableCell>
                              <div className="flex items-center gap-2">
                                <Dialog>
                                  <DialogTrigger asChild>
                                    <Button size="sm" variant="outline">
                                      <Bell className="w-3 h-3 mr-1" />
                                      Notify
                                    </Button>
                                  </DialogTrigger>
                                  <DialogContent>
                                    <DialogHeader>
                                      <DialogTitle>Send Tracking Notification</DialogTitle>
                                      <DialogDescription>
                                        Send a notification for shipment #{shipment.id} to {shipment.toName}
                                      </DialogDescription>
                                    </DialogHeader>
                                    <div className="space-y-4">
                                      <div className="grid grid-cols-2 gap-2 text-sm bg-gray-50 p-3 rounded">
                                        <div><strong>Customer:</strong> {shipment.toName}</div>
                                        <div><strong>Status:</strong> {shipment.status.replace('_', ' ').toUpperCase()}</div>
                                        <div><strong>Tracking:</strong> {shipment.trackingNumber || 'None'}</div>
                                        <div><strong>Carrier:</strong> {shipment.carrier?.toUpperCase() || 'Not assigned'}</div>
                                      </div>
                                      <div className="flex gap-2 flex-wrap">
                                        <Button 
                                          size="sm" 
                                          onClick={() => {
                                            sendManualNotification.mutate({
                                              notificationType: 'tracking-number',
                                              shipmentId: shipment.id.toString()
                                            });
                                          }}
                                          disabled={!shipment.trackingNumber || sendManualNotification.isPending}
                                        >
                                          {sendManualNotification.isPending ? (
                                            <Loader2 className="w-3 h-3 mr-1 animate-spin" />
                                          ) : (
                                            <Bell className="w-3 h-3 mr-1" />
                                          )}
                                          Tracking Update
                                        </Button>
                                        <Button 
                                          size="sm" 
                                          variant="outline"
                                          onClick={() => {
                                            sendManualNotification.mutate({
                                              notificationType: 'delivery',
                                              shipmentId: shipment.id.toString()
                                            });
                                          }}
                                          disabled={shipment.status !== 'delivered' || sendManualNotification.isPending}
                                        >
                                          <CheckCircle className="w-3 h-3 mr-1" />
                                          Delivery Confirm
                                        </Button>
                                        <Button 
                                          size="sm" 
                                          variant="outline"
                                          onClick={() => {
                                            sendManualNotification.mutate({
                                              notificationType: 'tracking-exception',
                                              shipmentId: shipment.id.toString()
                                            });
                                          }}
                                          disabled={sendManualNotification.isPending}
                                        >
                                          <AlertCircle className="w-3 h-3 mr-1" />
                                          Exception
                                        </Button>
                                      </div>
                                    </div>
                                  </DialogContent>
                                </Dialog>
                                
                                <Button size="sm" variant="ghost" asChild>
                                  <Link href={`/admin-shipments?search=${shipment.id}`}>
                                    <Eye className="w-3 h-3" />
                                  </Link>
                                </Button>
                              </div>
                            </TableCell>
                          </TableRow>
                        ))
                      ) : (
                        <TableRow>
                          <TableCell colSpan={9} className="text-center py-8">
                            <div className="flex flex-col items-center space-y-2">
                              <Truck className="h-12 w-12 text-gray-400" />
                              <h3 className="text-sm font-medium text-gray-900">
                                {searchTerm || statusFilter || carrierFilter ? 'No matching shipments found' : 'No shipments found'}
                              </h3>
                              <p className="text-sm text-gray-500">
                                {searchTerm || statusFilter || carrierFilter ? 'Try adjusting your search or filter criteria' : 'Shipments will appear here once they are created with tracking numbers'}
                              </p>
                            </div>
                          </TableCell>
                        </TableRow>
                      )}
                    </TableBody>
                  </Table>
                </div>
              )}
              
              {/* Stats Summary */}
              <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
                <Card>
                  <CardContent className="pt-4">
                    <div className="text-center">
                      <div className="text-2xl font-bold text-blue-600">
                        {allShipments.length}
                      </div>
                      <div className="text-sm text-muted-foreground">Total Shipments</div>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="pt-4">
                    <div className="text-center">
                      <div className="text-2xl font-bold text-green-600">
                        {allShipments.filter((s: Shipment) => s.status === 'delivered').length}
                      </div>
                      <div className="text-sm text-muted-foreground">Delivered</div>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="pt-4">
                    <div className="text-center">
                      <div className="text-2xl font-bold text-orange-600">
                        {allShipments.filter((s: Shipment) => s.status === 'in_transit' || s.status === 'out_for_delivery').length}
                      </div>
                      <div className="text-sm text-muted-foreground">In Transit</div>
                    </div>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="pt-4">
                    <div className="text-center">
                      <div className="text-2xl font-bold text-red-600">
                        {allShipments.filter((s: Shipment) => s.status === 'exception' || s.status === 'pending').length}
                      </div>
                      <div className="text-sm text-muted-foreground">Issues/Pending</div>
                    </div>
                  </CardContent>
                </Card>
              </div>
            </CardContent>
          </Card>
        </TabsContent>

        {/* Manual Notifications Tab */}
        <TabsContent value="manual" className="space-y-6">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Send className="w-5 h-5" />
                Send Manual Notification
              </CardTitle>
              <CardDescription>
                Send notifications manually to specific users or shipments
              </CardDescription>
            </CardHeader>
            <CardContent>
              <Form {...manualForm}>
                <form onSubmit={manualForm.handleSubmit((data) => sendManualNotification.mutate(data))} className="space-y-4">
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <FormField
                      control={manualForm.control}
                      name="notificationType"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Notification Type</FormLabel>
                          <Select onValueChange={field.onChange} value={field.value}>
                            <FormControl>
                              <SelectTrigger>
                                <SelectValue placeholder="Select notification type" />
                              </SelectTrigger>
                            </FormControl>
                            <SelectContent>
                              {notificationTypes.map((type) => (
                                <SelectItem key={type.value} value={type.value}>
                                  {type.label}
                                </SelectItem>
                              ))}
                            </SelectContent>
                          </Select>
                          <FormMessage />
                        </FormItem>
                      )}
                    />

                    <FormField
                      control={manualForm.control}
                      name="shipmentId"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Shipment ID (Optional)</FormLabel>
                          <FormControl>
                            <Input placeholder="Enter shipment ID" {...field} />
                          </FormControl>
                          <FormDescription>
                            Leave empty for general notifications
                          </FormDescription>
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>

                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <FormField
                      control={manualForm.control}
                      name="userId"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>User ID (Optional)</FormLabel>
                          <FormControl>
                            <Input placeholder="Enter user ID" {...field} />
                          </FormControl>
                          <FormDescription>
                            Target specific user
                          </FormDescription>
                          <FormMessage />
                        </FormItem>
                      )}
                    />

                    <FormField
                      control={manualForm.control}
                      name="recipients"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Custom Recipients (Optional)</FormLabel>
                          <FormControl>
                            <Input placeholder="email1@example.com, email2@example.com" {...field} />
                          </FormControl>
                          <FormDescription>
                            Comma-separated email addresses
                          </FormDescription>
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>

                  <FormField
                    control={manualForm.control}
                    name="customSubject"
                    render={({ field }) => (
                      <FormItem>
                        <FormLabel>Custom Subject (Optional)</FormLabel>
                        <FormControl>
                          <Input placeholder="Custom email subject" {...field} />
                        </FormControl>
                        <FormMessage />
                      </FormItem>
                    )}
                  />

                  <FormField
                    control={manualForm.control}
                    name="customMessage"
                    render={({ field }) => (
                      <FormItem>
                        <FormLabel>Custom Message (Optional)</FormLabel>
                        <FormControl>
                          <Textarea 
                            placeholder="Add custom message to the email"
                            className="min-h-[100px]"
                            {...field}
                          />
                        </FormControl>
                        <FormMessage />
                      </FormItem>
                    )}
                  />

                  <Button type="submit" disabled={sendManualNotification.isPending}>
                    {sendManualNotification.isPending && (
                      <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                    )}
                    Send Notification
                  </Button>
                </form>
              </Form>
            </CardContent>
          </Card>
        </TabsContent>

        {/* Tracking Scheduler Tab */}
        <TabsContent value="scheduler" className="space-y-6">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Settings className="w-5 h-5" />
                Tracking Scheduler Control
              </CardTitle>
              <CardDescription>
                Manage the automatic tracking synchronization system
              </CardDescription>
            </CardHeader>
            <CardContent className="space-y-6">
              {statusLoading ? (
                <div className="flex items-center justify-center py-8">
                  <Loader2 className="h-6 w-6 animate-spin" />
                </div>
              ) : schedulerStatus && typeof schedulerStatus === 'object' && 'isRunning' in schedulerStatus ? (
                <div className="space-y-4">
                  <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <Card>
                      <CardContent className="pt-6">
                        <div className="flex items-center space-x-2">
                          {(schedulerStatus as TrackingSchedulerStatus).isRunning ? (
                            <CheckCircle className="h-4 w-4 text-green-500" />
                          ) : (
                            <AlertCircle className="h-4 w-4 text-red-500" />
                          )}
                          <div>
                            <p className="text-sm font-medium">Status</p>
                            <p className={`text-lg font-bold ${
                              (schedulerStatus as TrackingSchedulerStatus).isRunning ? 'text-green-600' : 'text-red-600'
                            }`}>
                              {(schedulerStatus as TrackingSchedulerStatus).isRunning ? 'Running' : 'Stopped'}
                            </p>
                          </div>
                        </div>
                      </CardContent>
                    </Card>

                    <Card>
                      <CardContent className="pt-6">
                        <div className="flex items-center space-x-2">
                          <Clock className="h-4 w-4 text-blue-500" />
                          <div>
                            <p className="text-sm font-medium">Next Sync</p>
                            <p className="text-lg font-bold text-blue-600">
                              {new Date((schedulerStatus as TrackingSchedulerStatus).nextSync).toLocaleTimeString()}
                            </p>
                          </div>
                        </div>
                      </CardContent>
                    </Card>

                    <Card>
                      <CardContent className="pt-6">
                        <div className="flex items-center space-x-2">
                          <CheckCircle className="h-4 w-4 text-green-500" />
                          <div>
                            <p className="text-sm font-medium">Syncs Today</p>
                            <p className="text-lg font-bold text-green-600">
                              {(schedulerStatus as TrackingSchedulerStatus).syncCount}
                            </p>
                          </div>
                        </div>
                      </CardContent>
                    </Card>

                    <Card>
                      <CardContent className="pt-6">
                        <div className="flex items-center space-x-2">
                          <AlertCircle className="h-4 w-4 text-red-500" />
                          <div>
                            <p className="text-sm font-medium">Errors</p>
                            <p className="text-lg font-bold text-red-600">
                              {(schedulerStatus as TrackingSchedulerStatus).errors}
                            </p>
                          </div>
                        </div>
                      </CardContent>
                    </Card>
                  </div>

                  <div className="flex items-center gap-4">
                    <Button
                      onClick={() => controlScheduler.mutate("start")}
                      disabled={(schedulerStatus as TrackingSchedulerStatus).isRunning || controlScheduler.isPending}
                      className="flex items-center gap-2"
                    >
                      <Play className="w-4 h-4" />
                      Start Scheduler
                    </Button>

                    <Button
                      onClick={() => controlScheduler.mutate("stop")}
                      disabled={!(schedulerStatus as TrackingSchedulerStatus).isRunning || controlScheduler.isPending}
                      variant="outline"
                      className="flex items-center gap-2"
                    >
                      <Pause className="w-4 h-4" />
                      Stop Scheduler
                    </Button>

                    <Button
                      onClick={() => controlScheduler.mutate("sync")}
                      disabled={controlScheduler.isPending}
                      variant="outline"
                      className="flex items-center gap-2"
                    >
                      <RotateCcw className="w-4 h-4" />
                      Manual Sync
                    </Button>
                  </div>

                  {(schedulerStatus as TrackingSchedulerStatus).lastSync && (
                    <div className="text-sm text-muted-foreground">
                      Last sync: {new Date((schedulerStatus as TrackingSchedulerStatus).lastSync).toLocaleString()}
                    </div>
                  )}
                </div>
              ) : (
                <div className="text-center py-8">
                  <Settings className="mx-auto h-12 w-12 text-gray-400" />
                  <h3 className="mt-2 text-sm font-medium text-gray-900">No scheduler data</h3>
                  <p className="mt-1 text-sm text-gray-500">
                    Unable to load scheduler status.
                  </p>
                </div>
              )}
            </CardContent>
          </Card>
        </TabsContent>

        {/* Notification Logs Tab */}
        <TabsContent value="logs" className="space-y-6">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Mail className="w-5 h-5" />
                Notification Logs
              </CardTitle>
              <CardDescription>
                View sent notification history and delivery status
              </CardDescription>
            </CardHeader>
            <CardContent>
              {logsLoading ? (
                <div className="flex items-center justify-center py-8">
                  <Loader2 className="h-6 w-6 animate-spin" />
                </div>
              ) : notificationLogs && Array.isArray(notificationLogs) && notificationLogs.length > 0 ? (
                <div className="border rounded-lg">
                  <Table>
                    <TableHeader>
                      <TableRow>
                        <TableHead>Type</TableHead>
                        <TableHead>Recipient</TableHead>
                        <TableHead>Subject</TableHead>
                        <TableHead>Status</TableHead>
                        <TableHead>Sent At</TableHead>
                        <TableHead>Shipment ID</TableHead>
                      </TableRow>
                    </TableHeader>
                    <TableBody>
                      {notificationLogs.map((log: NotificationLog) => (
                        <TableRow key={log.id}>
                          <TableCell>
                            <Badge variant="outline">
                              {log.type.replace('-', ' ').toUpperCase()}
                            </Badge>
                          </TableCell>
                          <TableCell>{log.recipient}</TableCell>
                          <TableCell>{log.subject}</TableCell>
                          <TableCell>
                            <Badge className={log.status === 'sent' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}>
                              {log.status.toUpperCase()}
                            </Badge>
                          </TableCell>
                          <TableCell>{new Date(log.sentAt).toLocaleString()}</TableCell>
                          <TableCell>
                            {log.shipmentId ? `#${log.shipmentId}` : '-'}
                          </TableCell>
                        </TableRow>
                      ))}
                    </TableBody>
                  </Table>
                </div>
              ) : (
                <div className="text-center py-8">
                  <Mail className="mx-auto h-12 w-12 text-gray-400" />
                  <h3 className="mt-2 text-sm font-medium text-gray-900">No notification logs</h3>
                  <p className="mt-1 text-sm text-gray-500">
                    Notification logs will appear here once emails are sent.
                  </p>
                </div>
              )}
            </CardContent>
          </Card>
        </TabsContent>

        {/* Test Emails Tab */}
        <TabsContent value="test" className="space-y-6">
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <TestTube className="w-5 h-5" />
                Email Template Testing
              </CardTitle>
              <CardDescription>
                Send test emails to verify templates and email delivery
              </CardDescription>
            </CardHeader>
            <CardContent>
              <Form {...testEmailForm}>
                <form onSubmit={testEmailForm.handleSubmit((data) => sendTestEmail.mutate(data))} className="space-y-4">
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <FormField
                      control={testEmailForm.control}
                      name="emailType"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Email Template</FormLabel>
                          <Select onValueChange={field.onChange} value={field.value}>
                            <FormControl>
                              <SelectTrigger>
                                <SelectValue placeholder="Select email template" />
                              </SelectTrigger>
                            </FormControl>
                            <SelectContent>
                              {testEmailTypes.map((type) => (
                                <SelectItem key={type.value} value={type.value}>
                                  {type.label}
                                </SelectItem>
                              ))}
                            </SelectContent>
                          </Select>
                          <FormMessage />
                        </FormItem>
                      )}
                    />

                    <FormField
                      control={testEmailForm.control}
                      name="testRecipient"
                      render={({ field }) => (
                        <FormItem>
                          <FormLabel>Test Recipient Email</FormLabel>
                          <FormControl>
                            <Input placeholder="test@example.com" {...field} />
                          </FormControl>
                          <FormMessage />
                        </FormItem>
                      )}
                    />
                  </div>

                  <Button type="submit" disabled={sendTestEmail.isPending}>
                    {sendTestEmail.isPending && (
                      <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                    )}
                    Send Test Email
                  </Button>
                </form>
              </Form>
            </CardContent>
          </Card>
        </TabsContent>
      </Tabs>
      </div>
    );
  } catch (error) {
    console.error('AdminTrackingPage error:', error);
    return (
      <div className="container mx-auto p-6">
        <h1 className="text-2xl font-bold text-red-600">Error Loading Admin Tracking</h1>
        <p className="text-red-500 mt-2">{error instanceof Error ? error.message : 'Unknown error occurred'}</p>
        <pre className="bg-gray-100 p-4 mt-4 text-xs overflow-auto">
          {error instanceof Error ? error.stack : JSON.stringify(error, null, 2)}
        </pre>
      </div>
    );
  }
}

export default withAuth(AdminTrackingPage, true);